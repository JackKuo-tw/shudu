{
    "manifest_version": 3,
    "name": "Shudu 舒讀",
    "version": "1.3.2",
    "description": "__MSG_manifest_description__",
    "homepage_url": "https://shudu.jackkuo.org/",
    "default_locale": "zh_TW",
    "icons": {
        "128": "icons/book_128.png"
    },
    "action": {
        "default_title": "Shudu"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://docs.google.com/document/*"
            ],
            "js": [
                "shudu.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
