{
    "manifest_version": 3,
    "name": "Shudu 舒讀",
    "version": "1.4.1",
    "description": "Shudu 為一個開源文字處理平台，目的是讓閱讀者能夠舒服的閱讀、編寫文案。",
    "homepage_url": "https://shudu.jackkuo.org/",
    "default_locale": "zh_TW",
    "icons": {
        "128": "icons/book_128.png"
    },
    "action": {
        "default_title": "Shudu"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://docs.google.com/document/*"
            ],
            "js": [
                "shudu.js",
                "libs/pangu.js",
                "libs/opencc/opencc.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "libs/opencc/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
